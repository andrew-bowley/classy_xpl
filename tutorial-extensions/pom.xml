    		            </configuration>
    		        </execution>
    		        <execution>
    		            <id>download-ormlite-core-sources</id>
    		            <phase>initialize</phase>
    		            <goals>
    		                <goal>wget</goal>
    		            </goals>
    		            <configuration>
    		                <url>http://ormlite.com/releases/4.49-SNAPSHOT/ormlite-core-4.49-SNAPSHOT-sources.jar</url>
    		                <unpack>false</unpack>
    		                <outputDirectory>${basedir}/ormlite-core</outputDirectory>
    		                <md5>d69b984807deec5f40767754772f9a8c</md5>
