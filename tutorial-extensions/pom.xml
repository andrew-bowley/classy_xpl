    		        </execution>
    		        <execution>
    		            <id>download-ormlite-core-docs</id>
    		            <phase>initialize</phase>
    		            <goals>
    		                <goal>wget</goal>
    		            </goals>
    		            <configuration>
    		                <url>http://ormlite.com/releases/4.49-SNAPSHOT/ormlite-core-4.49-SNAPSHOT-javadoc.jar</url>
    		                <unpack>false</unpack>
    		                <outputDirectory>${basedir}/ormlite-core</outputDirectory>
    		                <md5>6913c9ede1c75bfc4a0cadd0d2835f07</md5>
    		            </configuration>
    		        </execution>
    		        <execution>
    		            <id>download-ormlite-jdbc</id>
    		            <phase>initialize</phase>
    		            <goals>
    		                <goal>wget</goal>
    		            </goals>
    		            <configuration>
    		                <url>http://ormlite.com/releases/4.49-SNAPSHOT/ormlite-jdbc-4.49-SNAPSHOT.jar</url>
    		                <unpack>false</unpack>
    		                <outputDirectory>${basedir}/ormlite-jdbc</outputDirectory>
    		                <md5>daeda03b1decd2ef5ccd083c45c3aad6</md5>
    		            </configuration>
    		        </execution>
    		        <execution>
    		            <id>download-ormlite-jdbc-sources</id>
    		            <phase>initialize</phase>
    		            <goals>
    		                <goal>wget</goal>
    		            </goals>
    		            <configuration>
    		                <url>http://ormlite.com/releases/4.49-SNAPSHOT/ormlite-jdbc-4.49-SNAPSHOT-sources.jar</url>
    		                <unpack>false</unpack>
    		                <outputDirectory>${basedir}/ormlite-jdbc</outputDirectory>
    		                <md5>fd0dedb013111f612b92d1e8fd0972d4</md5>
    		            </configuration>
    		        </execution>
    		        <execution>
    		            <id>download-ormlite-jdbc-docs</id>
    		            <phase>initialize</phase>
    		            <goals>
    		                <goal>wget</goal>
    		            </goals>
    		            <configuration>
    		                <url>http://ormlite.com/releases/4.49-SNAPSHOT/ormlite-jdbc-4.49-SNAPSHOT-javadoc.jar</url>
    		                <unpack>false</unpack>
    		                <outputDirectory>${basedir}/ormlite-jdbc</outputDirectory>
    		                <md5>8ead82b2be93f15f70b8ae502032316e</md5>
    		            </configuration>
    		        </execution>
      		    </executions>
    		  </plugin>
              <plugin>
               <groupId>org.apache.maven.plugins</groupId>
               <artifactId>maven-install-plugin</artifactId>
                   <execution>
                     <id>ormlite-core</id>
                     <goals>
                        <goal>install-file</goal>
                     </goals>
                     <phase>initialize</phase>
                     <configuration>
                       <packaging>jar</packaging>
                       <file>${basedir}/ormlite-core/ormlite-core-4.49-SNAPSHOT.jar</file>
                       <sources>${basedir}/ormlite-core/ormlite-core-4.49-SNAPSHOT-sources.jar</sources>
                       <javaDoc>${basedir}/ormlite-core/ormlite-core-4.49-SNAPSHOT-javadoc.jar</javaDoc>
                       <generatePom>false</generatePom>
                       <pomFile>${basedir}/ormlite-core/pom.xml</pomFile>
                     </configuration>
                  </execution>
                  <execution>
                     <id>ormlite-jdbc</id>
                     <goals>
                        <goal>install-file</goal>
                     </goals>
                     <phase>initialize</phase>
                     <configuration>
                       <packaging>jar</packaging>
                       <file>${basedir}/ormlite-jdbc/ormlite-jdbc-4.49-SNAPSHOT.jar</file>
                       <sources>${basedir}/ormlite-jdbc/ormlite-jdbc-4.49-SNAPSHOT-sources.jar</sources>
                       <javaDoc>${basedir}/ormlite-jdbc/ormlite-jdbc-4.49-SNAPSHOT-javadoc.jar</javaDoc>
                       <generatePom>false</generatePom>
                       <pomFile>${basedir}/ormlite-jdbc/pom.xml</pomFile>
                     </configuration>
                  </execution>
               </executions>
              </plugin>      
             <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                  <execution>
                    <id>copy-dependencies</id>
                    <phase>initialize</phase>
                    <goals>
                      <goal>copy-dependencies</goal>
                    </goals>
                    <configuration>
                      <includeScope>runtime</includeScope>  
                      <outputDirectory>libs</outputDirectory>
                      <overWriteReleases>false</overWriteReleases>
                      <overWriteSnapshots>false</overWriteSnapshots>
                      <overWriteIfNewer>true</overWriteIfNewer>
                    </configuration>
                  </execution>
                </executions>
              </plugin>
            </plugins>
          </build>
    </profile>
  </profiles>
</project>