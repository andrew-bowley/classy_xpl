  <build>
    <finalName>${project.artifactId}</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <executions>
          <execution>
            <phase>initialize</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.basedir}/res</outputDirectory>
              <resources>
                <resource>
                  <directory>${project.basedir}/src/templates/res</directory>
                  <targetPath>${project.basedir}/res</targetPath>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.simpligility.maven.plugins</groupId>
        <artifactId>android-maven-plugin</artifactId>
        <extensions>true</extensions>
        <executions>
          <execution>
            <id>manifestUpdate</id>
            <phase>process-resources</phase>
            <goals>
              <goal>manifest-merger</goal>
            </goals>
          </execution>
          <execution>
            <id>alignApk</id>
            <phase>package</phase>
            <goals>
              <goal>zipalign</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <manifest>
            <debuggable>true</debuggable>
          </manifest>
          <proguard>
            <skip>true</skip>
            <config>proguard.cfg</config>
            <configs>
              <config>${env.ANDROID_HOME}/tools/proguard/proguard-android.txt</config>
            </configs>
          </proguard>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>eclipse</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.bitbucket.komo81</groupId>
            <artifactId>eclipse-aar-maven-plugin</artifactId>
            <version>1.0.0</version>
            <executions>
              <execution>
                <phase>initialize</phase>
                <goals>
                  <goal>clean</goal>
                  <goal>generate</goal>
                </goals>
                <configuration>
                  <androidSdk>${android.platform.version}</androidSdk>
                  <outputDirectory>${basedir}/eclipse-aar</outputDirectory>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>release</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-shade-plugin</artifactId>
            <version>2.4</version>
            <executions>
              <execution>
                <phase>package</phase>
                <goals>
                  <goal>shade</goal>
                </goals>
                <configuration>
                  <artifactSet>
                    <excludes>
                      <exclude>commons-logging:commons-logging</exclude>
                    </excludes>
                  </artifactSet>
                  <minimizeJar>true</minimizeJar>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <artifactId>maven-jarsigner-plugin</artifactId>
            <version>1.2</version>
            <executions>
              <execution>
                <id>signing</id>
                <phase>package</phase>
                <goals>
                  <goal>sign</goal>
                  <goal>verify</goal>
                </goals>
                <inherited>true</inherited>
                <configuration>
                  <removeExistingSignatures>true</removeExistingSignatures>
                  <archiveDirectory />
                  <includes>
                    <include>/opt/git-work/classy_xpl/telegen/telegen-application/target/telegen.apk</include>
                  </includes>
                  <keystore>/opt/android-sdk-linux/keystore/c2.keystore</keystore>
                  <alias>cybersearch2.com.au</alias>
                  <storepass>Krypt0K9!</storepass>
                  <keypass>Krypt0K9!</keypass>
                  <verbose>false</verbose>
                  <arguments>
                    <argument>-sigalg</argument>
                    <argument>MD5withRSA</argument>
                    <argument>-digestalg</argument>
                    <argument>SHA1</argument>
                  </arguments>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>com.simpligility.maven.plugins</groupId>
            <artifactId>android-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>manifestMerger</id>
                <phase>process-resources</phase>
                <goals>
                  <goal>manifest-merger</goal>
                </goals>
                <configuration>
                  <release>true</release>
                  <sign>
                    <debug>false</debug>
                  </sign>
                  <zipalign>
                    <skip>false</skip>
                    <verbose>true</verbose>
                    <inputApk>/opt/git-work/classy_xpl/telegen/telegen-application/target/telegen.apk</inputApk>
                    <outputApk>/opt/git-work/classy_xpl/telegen/telegen-application/target/telegen-signed-aligned.apk</outputApk>
                  </zipalign>
                  <manifest>
                    <debuggable>false</debuggable>
                    <versionCodeAutoIncrement>true</versionCodeAutoIncrement>
                  </manifest>
                  <proguard>
                    <skip>false</skip>
                    <config>proguard.cfg</config>
                    <configs>
                      <config>/opt/android-sdk-linux/tools/proguard/proguard-android.txt</config>
                    </configs>
                  </proguard>
                  <androidManifestFile>/opt/git-work/classy_xpl/telegen/telegen-application/AndroidManifest.xml</androidManifestFile>
                  <assetsDirectory>/opt/git-work/classy_xpl/telegen/telegen-application/assets</assetsDirectory>
                  <resourceDirectory>/opt/git-work/classy_xpl/telegen/telegen-application/res</resourceDirectory>
                  <nativeLibrariesDirectory>/opt/git-work/classy_xpl/telegen/telegen-application/libs</nativeLibrariesDirectory>
                  <sdk>
                    <platform>24</platform>
                  </sdk>
                  <undeployBeforeDeploy>true</undeployBeforeDeploy>
                  <disableConflictingDependenciesWarning>true</disableConflictingDependenciesWarning>
                </configuration>
              </execution>
              <execution>
                <id>alignApk</id>
                <phase>package</phase>
                <goals>
                  <goal>zipalign</goal>
                </goals>
              </execution>
            </executions>
            <inherited>true</inherited>
            <configuration>
              <release>true</release>
              <sign>
                <debug>false</debug>
              </sign>
              <zipalign>
                <skip>false</skip>
                <verbose>true</verbose>
                <inputApk>${project.build.directory}/${project.artifactId}.apk</inputApk>
                <outputApk>${project.build.directory}/${project.artifactId}-signed-aligned.apk</outputApk>
              </zipalign>
              <manifest>
                <debuggable>false</debuggable>
                <versionCodeAutoIncrement>true</versionCodeAutoIncrement>
              </manifest>
              <proguard>
                <skip>false</skip>
                <config>proguard.cfg</config>
                <configs>
                  <config>${env.ANDROID_HOME}/tools/proguard/proguard-android.txt</config>
                </configs>
              </proguard>
            </configuration>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <version>1.8</version>
            <executions>
              <execution>
                <id>attach-signed-aligned</id>
                <phase>package</phase>
                <goals>
                  <goal>attach-artifact</goal>
                </goals>
                <configuration>
                  <artifacts>
                    <artifact>
                      <file>/opt/git-work/classy_xpl/telegen/telegen-application/target/telegen-signed-aligned.apk</file>
                      <type>apk</type>
                      <classifier>signed-aligned</classifier>
                    </artifact>
                    <artifact>
                      <file>/opt/git-work/classy_xpl/telegen/telegen-application/target/proguard/mapping.txt</file>
                      <type>map</type>
                      <classifier>release</classifier>
                    </artifact>
                  </artifacts>
                </configuration>
              </execution>
            </executions>
            <configuration>
              <artifacts>
                <artifact>
                  <file>/opt/git-work/classy_xpl/telegen/telegen-application/target/telegen-signed-aligned.apk</file>
                  <type>apk</type>
                  <classifier>signed-aligned</classifier>
                </artifact>
                <artifact>
                  <file>/opt/git-work/classy_xpl/telegen/telegen-application/target/proguard/mapping.txt</file>
                  <type>map</type>
                  <classifier>release</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <properties>
        <sign.keypass>${env.C2PASS}</sign.keypass>
        <sign.storepass>${env.C2PASS}</sign.storepass>
        <sign.keystore>${android.sdk.path}/keystore/c2.keystore</sign.keystore>
        <sign.alias>cybersearch2.com.au</sign.alias>
      </properties>
    </profile>
